{% extends 'base.html.twig' %}

{% block title %}Hello BonjourController!{% endblock %}

{% block body %}

    <h3>Mon Secret : {{ leSecret }} </h3>
    <h3>Mon Int : {{ leInt }} </h3>

    <ul>
        {% for name in leTableau %}
            <li>
                <a class="btn btn-primary" href="{{ path('salut', { name }) }}">{{ name }}</a>
            </li>
        {% endfor %}
    </ul>

    <hr>

    <form method="post">
        <input type="text" name="route" placeholder="votre name">
        <input type="submit">
    </form>

{% endblock %}
